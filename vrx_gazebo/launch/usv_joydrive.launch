<?xml version="1.0"?>
<launch>
  <arg name="set_thrust_angle" default="false"/>
  <arg name="max_angle" default="$(eval pi/2)"/>

  <!-- Joystick Driver -->
  <node pkg="joy" type="joy_node" name="joy">
    <param name="dev" value="/dev/input/js0"/>
    <!--<param name="autorepeat_rate" type="double" value="10.0" />  -->
    <param name="autorepeat_rate" value="10"/>
  </node>

  <!-- Choose if set thrust angle or not -->
  <group if="$(arg set_thrust_angle)">
    <rosparam file="$(find vrx_gazebo)/config/diffdrive_with_angle.yaml"
              command="load"/>
  </group>
  <group unless="$(arg set_thrust_angle)">
    <rosparam file="$(find vrx_gazebo)/config/diffdrive.yaml"
              command="load"/>
  </group>

  <!-- Joystick Teleop -->
  <node pkg="joy_teleop" type="joy_teleop.py" name="joy_teleop">
    <remap from="cmd_vel" to="cmd_vel" />
  </node>

  <!-- Convert Twist messages to Drive messages -->
  <node pkg="vrx_gazebo" type="twist2thrust.py" name="twist2thrust" output="screen">
    <remap from="left_cmd" to="left_thrust_cmd"/>
    <remap from="right_cmd" to="right_thrust_cmd"/>
  </node>
</launch>
